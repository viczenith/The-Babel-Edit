# Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# API URL - Set to your deployed backend URL in production
# Leave empty for auto-detection on localhost:5000 during development
# Production example: https://your-backend.onrender.com/api
NEXT_PUBLIC_API_URL=

# Node environment
NEXT_PUBLIC_NODE_ENV=development

# Stripe publishable key (get from https://dashboard.stripe.com/test/apikeys)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
